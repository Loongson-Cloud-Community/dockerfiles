# This file is generated by the template.

REGISTRY?=cr.loongnix.cn
ORGANIZATION?=danielqsj
REPOSITORY?=kafka_exporter
TAG?=1.2.0
LATEST?=true

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)
LATEST_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):latest

default: image

image:
	wget https://github.com/Loongson-Cloud-Community/kafka_exporter/releases/download/v1.2.0/kafka_exporter && chmod +x kafka_exporter 
	docker build \
		--build-arg http_proxy=$(http_proxy) \
		--build-arg https_proxy=$(https_proxy) \
		-t $(IMAGE) \
		.

push:
	docker push $(IMAGE)
	#latest image
	@if [ $(LATEST) = "true" ]; \
		then \
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi

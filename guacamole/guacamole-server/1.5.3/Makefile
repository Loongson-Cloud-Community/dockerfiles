REGISTRY?=cr.loongnix.cn
ORGANIZATION?=guacamole
REPOSITORY?=guacd
TAG?=1.5.3

GUACD_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)
GUACENC_IMAGE=$(REGISTRY)/$(ORGANIZATION)/guacenc:$(TAG)

default: image

image:
	docker build \
		--build-arg http_proxy=$(http_proxy) \
		--build-arg https_proxy=$(https_proxy) \
		-t $(GUACD_IMAGE) \
		-t $(GUACD_IMAGE)-buster \
		.
	docker build \
		--build-arg http_proxy=$(http_proxy) \
		--build-arg https_proxy=$(https_proxy) \
		-t $(GUACENC_IMAGE) \
		-t $(GUACENC_IMAGE)-buster \
		./guacenc

push:
	docker push $(GUACD_IMAGE)
	docker push $(GUACD_IMAGE)-buster
	docker push $(GUACENC_IMAGE)
	docker push $(GUACENC_IMAGE)-buster
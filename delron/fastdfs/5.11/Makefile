# This file is generated by the template.

REGISTRY?=cr.loongnix.cn
ORGANIZATION?=delron
REPOSITORY?=fastdfs
TAG?=v5.11

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)

FASTDFS_GIT=https://github.com/Loongson-Cloud-Community/delron_fastdfs.git
FASTDFS_TAG=v5.11

default: image

image:
	rm -rf delron_fastdfs
	git clone --branch ${FASTDFS_TAG} --depth=1 ${FASTDFS_GIT}
	${MAKE} image IMAGE_NAME=${IMAGE} -C delron_fastdfs

push:
	docker push $(IMAGE)

clean:
	rm -rf delron_fastdfs

REGISTRY?=cr.loongnix.cn
ORGANIZATION?=rook
REPOSITORY?=ceph
TAG?=1.8.5

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)


default: image

image: rook s5cmd
	docker build \
		--build-arg http_proxy=$(http_proxy) \
		--build-arg https_proxy=$(https_proxy) \
		-t $(IMAGE) \
		.

push:
	docker push $(IMAGE)

rook:
	curl -L -o rook https://github.com/Loongson-Cloud-Community/rook/releases/download/v1.8.5/rook-linux-loong64
	chmod +x rook

s5cmd:
	curl -L -o s5cmd https://github.com/Loongson-Cloud-Community/s5cmd/releases/download/v2.0.0/s5cmd-linux-loong64
	chmod +x s5cmd

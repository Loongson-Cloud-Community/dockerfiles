# This file is generated by the template.

REGISTRY?=cr.loongnix.cn
ORGANIZATION?=rancher
REPOSITORY?=rancher
TAG?=2.4.8
LATEST?=true

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)
LATEST_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):latest

default: image

image: download
	docker build \
		--build-arg http_proxy=$(http_proxy) \
		--build-arg https_proxy=$(https_proxy) \
		--build-arg VERSION=v$(TAG) \
		--build-arg ARCH=$(shell go env GOARCH) \
		--build-arg IMAGE_REPO=$(REPOSITORY) \
		--build-arg SYSTEM_CHART_DEFAULT_BRANCH=release-v2.4 \
		-t $(IMAGE) \
		.

download:
	wget https://github.com/Loongson-Cloud-Community/rancher/releases/download/v2.4.8/rancher
	chmod +x rancher
	wget https://github.com/Loongson-Cloud-Community/rancher/releases/download/v2.4.8/data.json

push:
	docker push $(IMAGE)
	#latest image
	@if [ $(LATEST) = "true" ]; \
		then \
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi

clean:
	rm -rf rancher \
		data.json

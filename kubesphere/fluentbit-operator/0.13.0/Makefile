ORGANIZATION?=kubesphere
REPOSITORY?=fluentbit-operator
TAG?=0.13.0

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)

FLUENT_OPERATOR_REGISTRY?=https://github.com/fluent/fluent-operator.git

FLUENT_OPERATOR_TAG?=v0.13.0

default: image

pkg:
	git clone --branch $(FLUENT_OPERATOR_TAG) $(FLUENT_OPERATOR_REGISTRY)
	mv fluent-operator/go.mod \
		fluent-operator/cmd/manager/main.go \
		fluent-operator/api \
		fluent-operator/controllers \
		fluent-operator/pkg \
		.
	rm -rf fluent-operator

download: pkg

image: download
	docker build \
		-t $(IMAGE) \
		.

push:
	docker push $(IMAGE)

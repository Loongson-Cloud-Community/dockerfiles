# This file is generated by the template.

REGISTRY?=cr.loongnix.cn
ORGANIZATION?=tdengine
REPOSITORY?=tdengine
TAG?=3.0.0.0
LATEST?=true

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)
LATEST_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):latest

default: image

image:
	wget https://github.com/Loongson-Cloud-Community/TDengine/releases/download/ver-3.0.0.0/TDengine-server-3.0.0.0-Linux-loongarch64.tar.gz -O TDengine-server-3.0.0.0-Linux-loongarch64.tar.gz
	wget https://github.com/Loongson-Cloud-Community/tini/releases/download/v0.18.0/tini-loong64 -O tini
	docker build --rm\
		--build-arg http_proxy=$(http_proxy) \
		--build-arg https_proxy=$(https_proxy) \
		-t $(IMAGE) \
		. \
		--build-arg pkgFile=TDengine-server-3.0.0.0-Linux-loongarch64.tar.gz \
		--build-arg dirName=TDengine-server-3.0.0.0 \
		--build-arg cpuType=loong64

push:
	docker push $(IMAGE)
	#latest image
	@if [ $(LATEST) = "true" ]; \
		then \
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi

default: image

rpm:
	./build.sh --package

image:
	docker build --build-arg https_proxy=${https_proxy} --build-arg http_proxy=${http_proxy} -f Dockerfile -t $(IMAGE) .

push:
	docker push $(IMAGE)
	@if [ $(LATEST) = "true" ]; \
		then\
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi

clean:
	rm -rf src

# This file is generated by the template.

REGISTRY?=cr.loongnix.cn
ORGANIZATION?=kubernetes-sigs
REPOSITORY?=cadvisor
TAG?=v0.49.1
LATEST?=false

GO_IMG?=cr.loongnix.cn/library/golang:1.21

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(lastword $(subst -, ,$(TAG)))
LATEST_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):latest

SOURCE_URL=https://github.com/google/cadvisor.git
SOURCE=$(shell echo $(SOURCE_URL) | awk -F '/' '{print $$NF}' | awk -F '.' '{print $$1}')
PATCH=0001-support-loong64.patch

default: image

src/$(SOURCE):
	git clone -b $(TAG) --depth=1 $(SOURCE_URL) $@
	cd $@ && \
		git apply ../../$(PATCH)

image: src/$(SOURCE)
	cd src/$(SOURCE)/ && \
	DOCKER_BUILD_ARGS="--build-arg https_proxy=${https_proxy} --build-arg http_proxy=${http_proxy} \
		--build-arg GOARCH=loong64 --build-arg GO_IMG=$(GO_IMG) --build-arg BASE_IMG=cr.loongnix.cn/library/alpine:3.11 " \
	IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY) \
		make docker-loong64

push:
	docker push $(IMAGE)
	@if [ $(LATEST) = "true" ]; \
		then\
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi

clean:
	rm -rf src

REGISTRY?=cr.loongnix.cn
ORGANIZATION?=library
REPOSITORY?=debian
TAG?=buster-slim

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)

ROOTFS=rootfs.tar.gz

default: image

image: $(ROOTFS)
	docker build \
		--build-arg ROOTFS=$(ROOTFS) \
		-t $(IMAGE) \
		.

push: 
	docker push $(IMAGE)

$(ROOTFS):
	./make_rootfs.sh

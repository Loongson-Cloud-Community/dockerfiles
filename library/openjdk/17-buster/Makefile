# This file is generated by the template.

REGISTRY?=cr.loongnix.cn
ORGANIZATION?=library
REPOSITORY?=openjdk
TAG?=17-buster

DOWNLOAD_URL?=http://ftp.loongnix.cn/Java/openjdk17/loongson17.7.0-fx-jdk17.0.8_7-linux-loongarch64.tar.gz
JAVA_VERSION?=17.7.0

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(JAVA_VERSION)
RELEASE_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)

default: image

image:
	docker build \
		-t $(IMAGE) \
		--build-arg DOWNLOAD_URL=$(DOWNLOAD_URL) \
		--build-arg JAVA_VERSION=$(JAVA_VERSION) \
		.

push:
	docker tag $(IMAGE) $(RELEASE_IMAGE)
	docker push $(IMAGE)
	docker push $(RELEASE_IMAGE)

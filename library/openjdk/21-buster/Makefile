REGISTRY?=cr.loongnix.cn
ORGANIZATION?=library
REPOSITORY?=openjdk
TAG?=21

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)

default: image

image:
	docker build \
		-t $(IMAGE)-slim \
		-t $(IMAGE)-slim-buster \
		-t $(IMAGE)-buster \
		.

push:
	docker push $(IMAGE)-slim
	docker push $(IMAGE)-slim-buster
	docker push $(IMAGE)-buster

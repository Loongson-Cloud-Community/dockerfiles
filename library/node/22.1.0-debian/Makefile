# This file is generated by the template.

REGISTRY?=cr.loongnix.cn
ORGANIZATION?=library
REPOSITORY?=node
TAG?=22.1.0
VERSION?=22.1.0

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)
FULL_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(VERSION)


default: image

image:
	docker build \
		--build-arg http_proxy=$(http_proxy) \
		--build-arg https_proxy=$(https_proxy) \
		-t $(IMAGE) \
		-t $(IMAGE)-buster-slim \
		-t $(FULL_IMAGE) \
		-t $(FULL_IMAGE)-buster-slim \
		.

push:
	docker push $(IMAGE)
	docker push $(IMAGE)-buster-slim
	docker push $(FULL_IMAGE)
	docker push $(FULL_IMAGE)-buster-slim
	docker tag $(IMAGE) $(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):22
	docker push $(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):22

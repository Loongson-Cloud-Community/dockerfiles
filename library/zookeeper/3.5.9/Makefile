# This file is generated by the template.

REGISTRY?=cr.loongnix.cn
ORGANIZATION?=library
REPOSITORY?=zookeeper
TAG?=3.5.9
LATEST?=false

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)
LATEST_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):latest

DOWNLOAD_URL?=https://github.com/Loongson-Cloud-Community/zookeeper/releases/download/release-3.5.9/apache-zookeeper-3.5.9-bin.tar.gz
GOSU_BINARY_URL?=https://github.com/Loongson-Cloud-Community/gosu/releases/download/loongson-1.14/gosu-loongarch64

default: image

image:
	docker build \
		--build-arg http_proxy=$(http_proxy) \
		--build-arg https_proxy=$(https_proxy) \
		--build-arg DOWNLOAD_URL=$(DOWNLOAD_URL) \
		--build-arg GOSU_BINARY_URL=$(GOSU_BINARY_URL) \
		-t $(IMAGE) \
		.

push:
	docker push $(IMAGE)
	#latest image
	@if [ $(LATEST) = "true" ]; \
		then \
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi

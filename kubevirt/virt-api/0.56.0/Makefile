ORGANIZATION?=kubevirt
REPOSITORY?=virt-api
TAG?=0.56.0
LATEST?=true

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)
LATEST_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):latest
DOWNLOAD_URL=https://github.com/Loongson-Cloud-Community/kubevirt/releases/download/v0.56.0/virt-api-v0.56.0-linux-loong64
default: image

download:
	wget -O virt-api $(DOWNLOAD_URL)
	chmod +x virt-api

image: download
	docker build \
		-t $(IMAGE) \
		.

push:
	docker push $(IMAGE)
	#latest image
	@if [ $(LATEST) = "true" ]; \
		then \
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi

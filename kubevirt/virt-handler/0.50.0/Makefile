IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)


default: image

download:
	wget "https://github.com/Loongson-Cloud-Community/kubevirt/releases/download/v0.50.0/virt-handler"
	chmod 755 virt-handler
	wget "https://github.com/Loongson-Cloud-Community/kubevirt/releases/download/v0.50.0/virt-chroot"
	chmod 755 virt-chroot
	wget "https://github.com/Loongson-Cloud-Community/kubevirt/releases/download/v0.50.0/container-disk"
	chmod 755 container-disk

image: download
	docker build \
		-t $(IMAGE) \
		.

push:
	docker push $(IMAGE)

clean:
	rm -f virt-handler \
		virt-chroot \
		container-disk

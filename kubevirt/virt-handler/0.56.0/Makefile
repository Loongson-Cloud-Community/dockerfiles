# This file is generated by the template.

REGISTRY?=cr.loongnix.cn
ORGANIZATION?=kubevirt
REPOSITORY?=virt-handler
TAG?=0.56.0
LATEST?=true

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)
LATEST_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):latest

default: image

download:
	wget -O virt-chroot https://github.com/Loongson-Cloud-Community/kubevirt/releases/download/v0.56.0/virt-chroot-v0.56.0-linux-loong64
	wget -O virt-handler https://github.com/Loongson-Cloud-Community/kubevirt/releases/download/v0.56.0/virt-handler-v0.56.0-linux-loong64
	wget -O container-disk https://github.com/Loongson-Cloud-Community/kubevirt/releases/download/v0.56.0/container-disk
	chmod +x virt-chroot virt-handler container-disk	
image: download
	docker build \
		-t $(IMAGE) \
		.

push:
	docker push $(IMAGE)
	#latest image
	@if [ $(LATEST) = "true" ]; \
		then \
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi

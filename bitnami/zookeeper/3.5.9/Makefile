REGISTRY?=cr.loongnix.cn
ORGANIZATION?=bitnami
REPOSITORY?=zookeeper
TAG?=3.5.9
LATEST?=false

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)
LATEST_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):latest

JAVA_URL?=http://ftp.loongnix.cn/Java/openjdk11/loongson11.3.0-fx-jdk11.0.17_8-linux-loongarch64.tar.gz
GOSU_URL?=https://github.com/Loongson-Cloud-Community/gosu/releases/download/loongson-1.14/gosu-loongarch64
WAIT_URL?=https://github.com/Loongson-Cloud-Community/wait-for-port/releases/download/v1.0.5/wait-for-port
ZOOKEEPER_URL?=https://github.com/Loongson-Cloud-Community/zookeeper/releases/download/release-3.5.9/apache-zookeeper-3.5.9-bin.tar.gz

default: image

image:
	docker build \
		--build-arg http_proxy=$(http_proxy) \
		--build-arg https_proxy=$(https_proxy) \
		--build-arg JAVA_URL=$(JAVA_URL) \
		--build-arg GOSU_URL=$(GOSU_URL) \
		--build-arg WAIT_URL=$(WAIT_URL) \
		--build-arg ZOOKEEPER_URL=$(ZOOKEEPER_URL) \
		-t $(IMAGE) \
		.

push:
	docker push $(IMAGE)
	#latest image
	@if [ $(LATEST) = "true" ]; \
		then \
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi

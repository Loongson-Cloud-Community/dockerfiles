# This file is generated by the template.

REGISTRY?=cr.loongnix.cn
ORGANIZATION?=clickhouse
REPOSITORY?=clickhouse-server
TAG?=22.3.2.2
LATEST?=true

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)
LATEST_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):latest

DEB_LOCATION_URL=https://github.com/Loongson-Cloud-Community/ClickHouse/releases/download/v$(TAG)-lts/deb.tar.gz

default: image

image:
	docker build \
		--build-arg http_proxy=$(http_proxy) \
		--build-arg https_proxy=$(https_proxy) \
		--build-arg deb_location_url=$(DEB_LOCATION_URL) \
		-t $(IMAGE) \
		.

push:
	docker push $(IMAGE)
	#latest image
	@if [ $(LATEST) = "true" ]; \
		then \
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi
